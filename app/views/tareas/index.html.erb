<h1>Mis Tareas</h1>
<table class="table table-hover">
		<thead class="thead-dark">
			<th>Tarea</th>
			<th>Editar</th>
			<th>Eliminar</th>
		</thead>
	<% @tareas.each do |tarea|%>
		<tr>
			<td><%= link_to tarea.titulo,{controller: "tareas",action: "show",id: tarea.id}%></td>
			<td><%=link_to "Editar",{controller: "tareas", action: "edit",id: tarea.id},class: "btn btn-warning"%>
			</td>
			<td><%=link_to "Eliminar",{controller: "tareas",action: "destroy",id: tarea.id},method: "delete",confirm: "Estas seguro?",class: "btn btn-danger"%></td>
		</tr>
	<% end %>
</table>
